{
  "manifest_version": 2,

  "name": "crouton integration",
  "description": "Improves integration with crouton. Synchronizes the clipboards and provides a means to forward URLs.",
  "version": "1.0.4",
  "icons": { "48": "icon-48.png" },
  "update_url": "http://localhost:30001/update.xml",

  "browser_action": {
    "default_icon": "icon-offline-38.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ]
}
